# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET		/getEmployeeById			@controllers.Application.getEmployeebyid(id)
GET		/getAllEmployees			@controllers.Application.getAllEmployees()
POST	/insertEmployee				@controllers.Application.insertEmployee()
POST	/updateEmployee				@controllers.Application.updateEmployee()
GET		/deleteEmployeeById			@controllers.Application.deleteEmployeeById(id)
GET		/deleteAllEmployees 		@controllers.Application.deleteAllEmployees()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
